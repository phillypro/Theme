  </div>
</form>
  
  
 
     <div id="mobile-menu" class="mobile-menu">
       

       
       <ul style="font-weight:{% if section.settings.link_bold == true %}bold{% else %}inherit{% endif %};text-transform:{% if section.settings.link_uppercase == true %}uppercase{% else %}none{% endif %};">
         
         
         
         
         {% for link in linklists.main-menu.links %}
         {% if linklists[link.handle] == empty %}
        {% if link.title == 'Catalog' %}
         {% else %}
         <li class="menu-item-{{ link.title }}">
            <a href="{{ link.url }}" title="{{ link.title }}">
            {{ link.title }}
            </a>
         </li>
        {% endif %} 
         {% else %}

         <li class="sub-collapse {% if link.active %} current-menu-item{% endif %} menu-item-{{ link.title }}" data-enhanced="true" data-role="collapsible">

           
  <div class="ui-collapsible-heading ui-collapsible-heading-collapsed">
    <a href="#" class="ui-collapsible-heading-toggle" style="color:{{ section.settings.link_color }}" title="{{ link.title }}">
       {{ link.title }}
    </a>
    </div>
         <div class="ui-collapsible-content ui-collapsible-content-collapsed" aria-hidden="true">
            <ul style="font-weight:{% if section.settings.link_bold == true %}bold{% else %}normal{% endif %};text-transform:{% if section.settings.link_uppercase == true %}uppercase{% else %}none{% endif %};">
               {% for l in linklists[link.handle].links %}
               <li style="font-size:100%;" class="menu-item-{{ l.title }}"><a style="color:{{ section.settings.link_color }}" href="{{ l.url }}" title="{{ l.title }}">{{ l.title }}</a></li>
               {% endfor %}
            </ul>
          </div>
         </li>
         {% endif %}
         {% endfor %}


{% if shop.customer_accounts_enabled %}
  {% if customer  %}
  <li class="menu-item-account"><a href="/account">Your Account</a></li>
  {% else %}
  <li class="menu-item-login">{{ 'Login' | customer_login_link }}</li>
  
  {% endif %}
{% endif %}
         
        
      </ul>
     </div>


     
     
     
   </div>
  </div>
